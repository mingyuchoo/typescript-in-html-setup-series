{
  "testRegex": "((\\.|/*.)(spec|test))\\.jest\\.js?$",
  "collectCoverage": true,
  "coverageDirectory": "./coverage",
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": -10
    },
    "./src/js/**/*.js": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": -10
    }
  },
  "testPathIgnorePatterns": ["/node_modules/"],
  "verbose": true
}