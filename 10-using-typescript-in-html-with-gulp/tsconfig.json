{
  "compilerOptions": {

    /* Types */
    "types": ["jest", "mocha", "chai", "node"],
    "typeRoots": ["typings.d.ts"],

    /* Basic Options */
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es5"],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./public/js",
    "rootDir": "src/ts",
    "removeComments": true,
    "noEmit": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "public"]
}
